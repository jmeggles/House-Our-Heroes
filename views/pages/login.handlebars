<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            {{#if message}}
            <h1 style="color: blue;">{{message}}</h1>
            {{/if}}
            <h1 class="text-center">Log In</h1>
            <form action="/auth/login" method="POST" class="alertAppend">
                <div class="form-group">
                    <label for="emailInput">Email address</label>
                    <input name="email" type="email" class="form-control"
                        id="emailInput" aria-describedby="emailHelp">
                </div>
                <div class="form-group">
                    <label for="passwordInput">Password</label>
                    <input name="password" type="password" class="form-control"
                        id="passwordInput">
                </div>
                <button id="submitBtn" type="submit"
                    class="btn btn-primary">Submit</button>
                <small class="form-text text-muted">Not Registered Yet..? <a
                        href="/user/register">Register</a></small>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/login.js"></script>